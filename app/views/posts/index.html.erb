<h1>Posts</h1>

<table>
<thead>
<tbody>
<% @posts.each do |post|%>
<tr>
<td><%= post.content%></td>
<td><%= link_to 'Show', post%></td>
<td><%= link_to 'Edit', edit_post_path(post)%></td>
<td><%= link_to "Delete", post_path(post), method: :delete, 
        data: { confirm: "Are you sure you want to delete this post"} %></td>

</tr>
<% end %>
</tbody>
</table>
<br>
<%= link_to 'New post', new_post_path %>

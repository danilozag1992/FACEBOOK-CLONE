<h1>Posts</h1>
<%= link_to 'Logout',destroy_user_session_path,method: :delete, 
        data: { confirm: "Are you sure you want to logout" } %>
        <p><%= link_to "Find Friends", users_path %></p>
<p><%= link_to "My Friends", friends_path %></p>

<br>
<% current_user.user_friends_post.each do |post| %>
<div class="columns is-mobile">
  <div class="column is-6 is-offset-3">
<div class="card">
    <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
        </figure>
      </div>
      <div class="media-content">
        <div class="columns is-mobile">
           <div class="column is-6">
             <p class="title is-4"><%= post.user.first_name %></p>
             <p class="subtitle is-6">@<%= post.user.first_name %><%= post.user.last_name %></p>
           </div>
           <% if current_user == post.user %>
            <div class="column is-6">
                <%= link_to 'Show', post %>
<%= link_to 'Edit', edit_post_path(post)%>
<%= link_to "Delete", post_path(post), method: :delete, 
        data: { confirm: "Are you sure you want to delete this post"} %>
           </div>
           <% end %>
       <!--  <p class="is-12"> <time class="is-small" datetime="2016-1-1"> 1 Jan 2016</time></p> -->
        </div>  
      </div>
    </div>
  </div>
  <!-- if there is image show ,else none -->
  <div class="card-image">
    <figure class="image is-4by3">
      <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
    </figure>
  </div>
  <div class="card-content">


    <div class="content">
      <%= post.content%>
      <br>
        <small><a><%= post.likes.count %> <%= ( post.likes.count ) == 1 ? 'Like' : 'Likes' %></a> · <a>Reply</a> · 3 hrs</small>
      <br>
  
    </div>
  </div>
</div>
<% post.comments.includes(:user).each do |comment| %>
<article class="media">

  <div class="media-content">

    
    <article class="media">
      <figure class="media-left">
        <p class="image is-48x48">
          <img src="https://bulma.io/images/placeholders/96x96.png">
        </p>
      </figure>
      <div class="media-content">
        <div class="content">
          <p>
            <strong>  <%= comment.user.first_name %></strong>
            <br>
             <%= comment.content %>
            <br>
            <small> 2 hrs</small>
          </p>
        </div>
      </div>
    </article>
  </div>
</article>

  <% end %>
     <%= render "comments/form" ,post: post %>  
  </div>
</div>
<% end %>




<%= link_to 'New Post', new_post_path %>

